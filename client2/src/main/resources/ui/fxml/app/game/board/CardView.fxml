<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane id="blueMarket" fx:id="cardBack" stylesheets="@../../../../../css/style.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane alignment="CENTER" hgap="10.0" layoutX="-1.0" layoutY="-1.0" onMouseClicked="#chooseCard" vgap="10.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.0" minWidth="10.0" prefWidth="86.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="371.0" minWidth="10.0" prefWidth="333.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="89.0" minHeight="8.0" prefHeight="12.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="178.0" minHeight="10.0" prefHeight="174.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="cardname" text="Label" textFill="WHITE" GridPane.columnIndex="1"/>
                <Label fx:id="cardClass" text="Label" textFill="WHITE">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <TextArea fx:id="cardDescription" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </children>
</AnchorPane>
