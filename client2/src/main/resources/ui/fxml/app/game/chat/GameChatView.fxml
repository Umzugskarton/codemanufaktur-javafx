<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<VBox id="chatroot" fx:id="rootParent" onKeyPressed="#handleKeyPressed" focusTraversable="false" prefHeight="196.0"
      prefWidth="500.0" stylesheets="@../../../../../css/style.css" xmlns="http://javafx.com/javafx/9"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="93.0" prefWidth="348.0">
            <content>
                <Pane>
                    <children>
                        <TextFlow fx:id="chatFlow" prefHeight="85.0" prefWidth="400.0"/>
                    </children>
                </Pane>
            </content>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </ScrollPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="347.0" minWidth="10.0" prefWidth="346.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="194.0" minWidth="10.0" prefWidth="54.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendChatButton" text="Send"
                        GridPane.columnIndex="1"/>
                <TextField fx:id="chatTextField" prefHeight="27.0" prefWidth="352.0"/>
            </children>
        </GridPane>
    </children>
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </opaqueInsets>
    <padding>
        <Insets left="20.0" right="10.0" top="60.0"/>
    </padding>
</VBox>
