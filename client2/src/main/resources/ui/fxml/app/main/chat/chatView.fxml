<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox id="chatroot" fx:id="rootParent" onKeyPressed="#handleKeyPressed" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="600.0" prefWidth="650.0">
            <content>
                <Pane>
                    <children>
                        <TextFlow fx:id="chatFlow" />
                    </children>
                </Pane>
            </content>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </ScrollPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendChatButton" text="Send" GridPane.columnIndex="1" />
                <TextField fx:id="chatTextField" />
            </children>
        </GridPane>
    </children>
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </opaqueInsets>
    <padding>
        <Insets left="20.0" right="10.0" top="60.0" />
    </padding>
</VBox>
